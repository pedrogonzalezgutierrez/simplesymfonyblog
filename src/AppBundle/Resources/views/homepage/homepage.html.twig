{% extends "::base.html.twig" %}

{% block body %}

	<div id="slider" class="carousel slide" data-ride="carousel">
  
  		<!-- Wrapper for slides -->
		<div class="carousel-inner">
			<div class="item active">
				<img class="center-block" u="image" src="{{ asset('images/slider/01.png') }}" />      
			</div>
			<div class="item">
				<img class="center-block" u="image" src="{{ asset('images/slider/02.jpg') }}" />
			</div>
			<div class="item">
				<img class="center-block" u="image" src="{{ asset('images/slider/03.png') }}" />      
			</div>
			<div class="item">
				<img class="center-block" u="image" src="{{ asset('images/slider/04.png') }}" />      
			</div>
			
		</div>
		
		<a class="left carousel-control" href="#slider" role="button" data-slide="prev">
			<span class="glyphicon glyphicon-chevron-left"></span>
		</a>
		<a class="right carousel-control" href="#slider" role="button" data-slide="next">
			<span class="glyphicon glyphicon-chevron-right"></span>
		</a>
  
	</div>
	
	<br/>

	{% if articles is not empty %}
	
		{% include 'AppBundle:article:list.html.twig' with {'articles': articles} only %}
		
		<a href="{{ path('readmore', {'page': 2, 'maxResults': 5}) }}" style="text-decoration: none">
			<button id="readmore" type="button" class="center-block btn btn-lg btn-primary"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> {{ 'action.readmore'|trans }}</button>
		</a>
		
	{% endif %}
	
{% endblock %}