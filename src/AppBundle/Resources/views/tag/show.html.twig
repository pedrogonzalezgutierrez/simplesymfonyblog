{% extends "::base.html.twig" %}

{% block body %}
	
	

	{% if tag.articles is not empty %}
	
		{% include 'AppBundle:article:list.html.twig' with {'articles': tag.articles} only %}
			
	{% else %}
		<br/>
		<div class="alert alert-danger text-center" role="alert">
			<h5>{{ 'error.thereisno'|trans }} {{ 'entity.article.plural'|trans }}</h5>
		</div>
		
		<button id="backbutton" type="button" class="center-block btn btn-lg btn-danger"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> {{ 'action.back'|trans }}</button>
				
    {% endif %}
    
{% endblock %}

{% block javascripts %}

	{{ parent() }}
	
	<script type="text/javascript">
		
		$(document).ready(function(){
		    $('#backbutton').click(function(){
		        parent.history.back();
		        return false;
		    });
		});
		
	</script>
	
{% endblock %}